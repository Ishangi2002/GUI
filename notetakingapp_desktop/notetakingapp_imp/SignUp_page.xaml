<Window x:Class="notetakingapp_imp.SignUp_page"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:notetakingapp_imp"
        mc:Ignorable="d"
        Title="SignUp_page" Height="600" Width="900">

    <Border Margin="300 100 300 200" BorderBrush="#D9DDDC" BorderThickness="1" CornerRadius="2,2,2,2">
        <StackPanel Margin="20">

         <Label Content="SignUp" Foreground="Black" FontSize="20" HorizontalAlignment="Left" FontFamily="popins" Margin="0 0 0 20"/>

            <Border CornerRadius="3" 
                    BorderBrush="#D9DDDC" 
                    BorderThickness="1" 
                    HorizontalAlignment="Left" 
                    Margin="26,0,0,4" 
                    Width="190" 
                    Height="25">
                <TextBox x:Name="txtName" 
                     Foreground="#909090" 
                     FontSize="12" 
                     Background="Transparent" 
                     BorderThickness="0" 
                     VerticalContentAlignment="Center" 
                     GotFocus="TextBox1_GotFocus" 
                     LostFocus="TextBox1_LostFocus" 
                     Text="Name" Margin="7,0,-7,0" />
            </Border>

            <Border CornerRadius="3" 
                    BorderBrush="#D9DDDC" 
                    BorderThickness="1" 
                    HorizontalAlignment="Left" 
                    Margin="26,0,0,4" 
                    Width="190" 
                    Height="25">
                <TextBox x:Name="txtEmail" 
                     Foreground="#909090" 
                     FontSize="12" 
                     Background="Transparent" 
                     BorderThickness="0" 
                     VerticalContentAlignment="Center" 
                     GotFocus="TextBox2_GotFocus" 
                     LostFocus="TextBox2_LostFocus" 
                     Text="Email" Margin="6,0,-6,0" />
            </Border>

            <Border CornerRadius="3" 
                    BorderBrush="#D9DDDC" 
                    BorderThickness="1" 
                    HorizontalAlignment="Left" 
                    Margin="26,0,0,4" 
                    Width="190" 
                    Height="25">
                <TextBox x:Name="txtPassword" 
                     Foreground="#909090" 
                     FontSize="12" 
                     Background="Transparent" 
                     BorderThickness="0" 
                     VerticalContentAlignment="Center" 
                     GotFocus="TextBox3_GotFocus" 
                     LostFocus="TextBox3_LostFocus" 
                     Text="Password" Margin="6,0,-6,0" />
            </Border>


            <Button x:Name="btncreate" Click="CreateUser_Click" Content="Create Account" Width="190" Height="25" Margin="25,5,25,10" FontSize="10" Foreground="White" HorizontalAlignment="Left">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="#7321A6" CornerRadius="4" BorderBrush="#7321A6" BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Label Content="Already have an account?" FontSize="9" Width="120" Height="22" HorizontalAlignment="Left" Margin="45 -8 0 1"/>

            <TextBlock HorizontalAlignment="Right" Margin="0 -18 68 10" FontSize="9">
                <Hyperlink NavigateUri="Dashboard" Click="Hyperlink_Click" Foreground="#7321A6">
                    <Hyperlink.Style>
                        <Style TargetType="Hyperlink">
                            <Setter Property="Foreground" Value="#7321A6" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="#7321A6" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Hyperlink.Style>
                    <Run Text="Login" />
                </Hyperlink>
            </TextBlock>



        </StackPanel>
    </Border>
</Window>
