<Window x:Class="notetakingapp_imp.landing_page"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:notetakingapp_imp"
        mc:Ignorable="d"
        Title="landing_page" Height="600" Width="900" Background="White">
    <Grid>
    <StackPanel Margin="0 150 ">
        
        <Label Content="Welcome to NoteMate!" Foreground="#7321A6" FontSize="25" HorizontalAlignment="Center" FontWeight="Bold" />
        <Label Content="Your personal note-taking companion.Organize your thoughts and ideas easily!" Foreground="gray" FontSize="20" HorizontalAlignment="Center" FontWeight="Bold" Margin="20" Width="760" />
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,0">

            <Button x:Name="btnLogin" Click="openWindow1" Content="Login" Width="70" Height="40" Margin="25 20" FontSize="15"  Foreground="White" MouseEnter="btnLogin_MouseEnter" MouseLeave="btnLogin_MouseLeave" >
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="#7321A6" CornerRadius="12" BorderBrush="#7321A6" BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            
            <Button x:Name="btnSignUp" Content="Sign Up" Width="70" Height="40" Margin="25 20" FontSize="15" Foreground="Black" MouseEnter="btnSignUp_MouseEnter" MouseLeave="btnSignUp_MouseLeave" Click="OpenWindow2" >
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="White" CornerRadius="12" BorderBrush="#7321A6" BorderThickness="1">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
            </Button>

        </StackPanel>
    </StackPanel>
    </Grid>
</Window>
