<Window x:Class="notetakingapp_imp.landing_page"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:notetakingapp_imp"
        mc:Ignorable="d"
        Title="Landing Page"
        Background="White"
        WindowState="Maximized" 
        WindowStartupLocation="CenterScreen"
        Width="900"
        Height="600">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="860">
            <!-- Welcome Title -->
            <Label Content="Welcome to NoteMate!" 
                   Foreground="#7321A6" 
                   FontSize="35" 
                   HorizontalAlignment="Left" 
                   Margin="-70"
                   FontWeight="Bold" />

            <!-- Subtitle -->
            <Label Foreground="Gray" 
       FontSize="21" 
       HorizontalAlignment="Left" 
       FontWeight="Bold" 
       Margin="-75,20,0,40" 
       MaxWidth="800" Width="882">
                <TextBlock TextAlignment="Left">
        <Run Text="  " /> 
        <Run Text="Your personal note-taking companion." />
        <LineBreak/>
        <Run Text="" /> 
        <Run Text="Organize your thoughts and ideas easily!" />
                </TextBlock>
            </Label>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Width="354" >
                <!-- Login Button -->
                <Button x:Name="btnLogin" 
                        Click="openWindow1" 
                        Content="Login" 
                        Width="120" 
                        Height="50" 
                        FontSize="20" 
                        Foreground="White" 
                        MouseEnter="btnLogin_MouseEnter" 
                        MouseLeave="btnLogin_MouseLeave"
                        Margin="-380 0 50 10">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="#7321A6" 
                                    CornerRadius="15" 
                                    BorderBrush="#7321A6" 
                                    BorderThickness="1">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Sign Up Button -->
                <Button x:Name="btnSignUp" 
                        Content="Sign Up" 
                        Width="117" 
                        Height="50" 
                        FontSize="20" 
                        Foreground="Black" 
                        MouseEnter="btnSignUp_MouseEnter" 
                        MouseLeave="btnSignUp_MouseLeave" 
                        Click="OpenWindow2"
                         Margin="-78 0 50 10">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="White" 
                                    CornerRadius="15" 
                                    BorderBrush="#7321A6" 
                                    BorderThickness="1">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </StackPanel>
        <Image Source="Images/landingimage.png" Width="800" Height="900" Margin="650 10 0 10 "/>

    </Grid>
</Window>
