<Window x:Class="notetakingapp_imp.login_page"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:notetakingapp_imp"
        mc:Ignorable="d"
        Title="Login Page" Height="600" Width="900" Background="White" WindowState="Maximized" 
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="Auto" MinHeight="282"/>
            <RowDefinition Height="88*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="Auto" MinWidth="395"/>
            <ColumnDefinition Width="51*"/>
        </Grid.ColumnDefinitions>

        <!-- Centered Content -->
        <Border Grid.Column="1" 
                Padding="20" 
                Background="White" 
                BorderBrush="#D9DDDC"
                BorderThickness="1"
                Height="310"
                CornerRadius="10" Margin="0 150 0 20" Grid.RowSpan="2">
            <StackPanel>
                <!-- Title -->
                <Label Content="Login" 
                       Foreground="Black" 
                       FontSize="24" 
                       FontFamily="Poppins" 
                       HorizontalAlignment="Left" 
                       Margin="10,0,0,30"/>

                <!-- Email Input -->
                <Border CornerRadius="5" 
                        BorderBrush="#D9DDDC" 
                        BorderThickness="1" 
                        Margin="0,0,0,10" 
                        Height="40">
                    <TextBox x:Name="txtEmail" 
                             Foreground="#909090" 
                             FontSize="14" 
                             Background="Transparent" 
                             BorderThickness="0" 
                             VerticalContentAlignment="Center"
                             GotFocus="TextBox2_GotFocus" 
                             LostFocus="TextBox2_LostFocus"
                             Text="Email" Padding="10,0"/>
                </Border>

                <!-- Password Input -->
                <Border CornerRadius="5" 
                        BorderBrush="#D9DDDC" 
                        BorderThickness="1" 
                        Margin="0,0,0,30" 
                        Height="40">
                    <TextBox x:Name="txtPassword" 
                             Foreground="#909090" 
                             FontSize="14" 
                             Background="Transparent" 
                             BorderThickness="0" 
                             VerticalContentAlignment="Center" 
                             GotFocus="TextBox3_GotFocus" 
                             LostFocus="TextBox3_LostFocus" 
                             Text="Password" Padding="10,0"/>
                </Border>

                <!-- Login Button -->
                <Button x:Name="btnLogin" 
                        Click="btnLogin_Click" 
                        Content="Login" 
                        Height="40" 
                        FontSize="14" 
                        Foreground="White" 
                        Margin="0,0,0,10">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="#7321A6" 
                                    CornerRadius="5" 
                                    BorderBrush="#7321A6" 
                                    BorderThickness="1">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Registration Text -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Label Content="Not Registered Yet?" 
                           FontSize="12" 
                           VerticalAlignment="Center"/>
                    <TextBlock Margin="5,0,0,0" FontSize="12" VerticalAlignment="Center">
                        <Hyperlink NavigateUri="SignUp_page" Click="Hyperlink_Click">
                            <Run Text="Create an Account" />
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
