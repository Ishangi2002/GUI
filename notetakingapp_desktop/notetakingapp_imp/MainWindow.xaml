<Window x:Class="notetakingapp_imp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:notetakingapp_imp"
        mc:Ignorable="d"
        Title="Dashboard" Height="600" Width="900" Background="White">

    <Grid Margin="20,10,16,480">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!-- Username Display -->
        <TextBlock Name="usernameTextBlock"
                   FontSize="18" 
                   FontWeight="Medium" 
                   VerticalAlignment="Center" 
                   Grid.Column="0" Grid.ColumnSpan="2" Height="235" Margin="0,0,-13,0" />

        <!-- Border for rounded edges -->
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border CornerRadius="5" 
                    Background="#F5F5F5" 
                    BorderBrush="#D6D6D6" 
                    BorderThickness="1" 
                    Width="280" 
                    Height="30" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center" 
                    Margin="100,0,0,0">

                <!-- TextBox for input -->
                <TextBox x:Name="searchTextBox"
                    Background="Transparent"
                    BorderThickness="0"
                    Margin="20,-1,-1,1"
                    VerticalContentAlignment="Center"
                    Foreground="#D6D6D6"
                    FontSize="14"
                    Text="Search Notes" 
                    GotFocus="SearchTextBox_GotFocus" 
                    LostFocus="SearchTextBox_LostFocus" />
            </Border>

            <!-- Search button -->
            <Button Width="20" 
                    Height="20" 
                    Background="#F5F5F5" 
                    BorderBrush="#F5F5F5" 
                    BorderThickness="1" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center" 
                    Margin="340,0,0,0" 
                    RenderTransformOrigin="-1.53,0.571">

                <!-- Button content (optional icon) -->
                <TextBlock Text="🔍" 
                    VerticalAlignment="Top" 
                    FontSize="14"                           
                    Background="#F5F5F5" 
                    Foreground="#D6D6D6" 
                    RenderTransformOrigin="0.438,0.329" 
                    HorizontalAlignment="Center"/>
            </Button>
        </Grid>



        <!-- Notes Header -->
        <TextBlock Text="Notes" 
                   FontSize="18" 
                   FontWeight="Medium" 
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"
                   Grid.Column="0" 
                   Grid.ColumnSpan="2" 
                   Margin="15,28,-25,0" 
                   Height="30"
                   Width="100"/>

        <!-- Logout Link -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="1">
            <TextBlock FontSize="9" Margin="0 0 40 -10 " FontFamily="Tahoma">
                <Hyperlink NavigateUri="Dashboard" Click="Hyperlink_Click">
                    <Hyperlink.Style>
                        <Style TargetType="{x:Type Hyperlink}">
                            <Setter Property="Foreground" Value="Black" />
                        </Style>
                    </Hyperlink.Style>
                    <Run Text="Logout" FontFamily="Segoe UI" />
                </Hyperlink>
            </TextBlock>
        </StackPanel>

        <!-- Add Note Button -->

        <Button x:Name="btnaddNote" 
                Click="btnaddNote_Click"  
                Width="35" 
                Height="35" 
                Margin="796,0,0,-420" 
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom" Grid.ColumnSpan="2">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="#7321A6" CornerRadius="4" BorderBrush="#7321A6" BorderThickness="1">
                        <ContentPresenter Content="+" HorizontalAlignment="Center" VerticalAlignment="Center" TextElement.Foreground="White"
                                  TextElement.FontSize="18" RenderTransformOrigin="0.507,0.591" Height="28" Width="12"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>


    </Grid>

</Window>
