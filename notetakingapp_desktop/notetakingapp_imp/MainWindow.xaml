<Window x:Class="notetakingapp_imp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard" Height="600" Width="900" Background="White">

    <Grid RenderTransformOrigin="0.556,-0.285">
        <!-- Notes Header -->
        <TextBlock Text="Notes" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"
                   Margin="20,15,0,0" />

        <!-- Search Notes -->
        <Border Width="250" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="320,16,0,0"
                CornerRadius="5" Background="#F2F3F5" BorderBrush="LightGray" BorderThickness="0">

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBox x:Name="searchTextBox"
                             Text="Search Notes"
                             Foreground="LightGray"
                             FontSize="15"
                             Height="30"
                             Background="Transparent"
                             BorderThickness="0"
                             BorderBrush="LightGray"
                             VerticalContentAlignment="Center"
                             GotFocus="SearchTextBox_GotFocus"
                             LostFocus="SearchTextBox_LostFocus" Margin="7,-2,-7,0"/>

                <TextBlock Text="🔍"
                              FontSize="14"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Right"
                              Margin="130,0,0,0"
                              Foreground="LightGray"/>
            </StackPanel>
        </Border>

        <!-- Horizontal Line -->
        <Line X1="0" Y1="55" X2="900" Y2="55" 
              Stroke="#D1D0CE" 
              StrokeThickness="1"
              Margin="0,5,0,-5" />


        <!-- User Profile Circle -->
        <Grid HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,11,30,0">
            <Ellipse Width="30" Height="30" Fill="#F2F3F5" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="-127,0,0,0" />
            <TextBlock Text="{Binding FirstLetter}" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" FontWeight="Bold"/>
        </Grid>

        <!--Username Header-->
        <TextBlock Text="Ishangi Shashinthya" 
           FontSize="10"  
           VerticalAlignment="Top"
           HorizontalAlignment="Right"
           Margin="0,13,30,0" />

        <TextBlock HorizontalAlignment="Right" Margin="0,29,89,2" FontSize="9" Panel.ZIndex="2">
    <Hyperlink NavigateUri="login_page" Click="Logout_Click" Foreground="#D1D0CE">
        <Hyperlink.Style>
            <Style TargetType="Hyperlink">
                <Setter Property="Foreground" Value="#D1D0CE" />
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Foreground" Value="#D1D0CE" />
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Hyperlink.Style>
        <Run Text="Logout" />
    </Hyperlink>
        </TextBlock>
        
        <!-- Notes Display -->
        <ScrollViewer Margin="20,80,20,80" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <ItemsControl x:Name="NotesList">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Width="320" Height="130" Margin="10" CornerRadius="6" Background="White" BorderBrush="#D1D0CE" BorderThickness="1" Padding="10">
                            <Grid>
                            
                                <!-- Note content -->
                                <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,5">
                                    <TextBlock Text="{Binding Title}" FontSize="16" FontWeight="Bold" Margin="0,0,0,5"/>
                                    <TextBlock Text="{Binding FormattedDate}" FontSize="12" Foreground="#D6D6D6" Margin="0,0,0,5"/>
                                    <TextBlock Text="{Binding Content}" FontSize="14" TextWrapping="Wrap" Margin="0,0,0,10"/>
                                    <Border Background="#F2F3F5" CornerRadius="6" Padding="2,1" Margin="0,0,220,0" Height="20">
                                        <TextBlock Text="{Binding Tags}" FontSize="12" Foreground="LightGray" HorizontalAlignment="Center"/>
                                    </Border>
                                </StackPanel>
                                
            <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right">
                <Button Content="✏" Width="20" Height="20" Margin="5,0,0,0" Background="White" Foreground="#D6D6D6" BorderThickness="0" VerticalAlignment="Bottom">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                        <Setter Property="Template">
                        <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </ControlTemplate>
                        </Setter.Value>
                        </Setter>
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="Foreground" Value="#D6D6D6"/>
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Content="🗑" Width="20" Height="20" Background="White" Foreground="#D6D6D6" BorderThickness="0" VerticalAlignment="Bottom">
                    <Button.Style>
                         <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                         <Setter Property="Template">
                         <Setter.Value>
                          <ControlTemplate TargetType="Button">
                             <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                          </ControlTemplate>
                          </Setter.Value>
                          </Setter>
                             <Setter Property="Background" Value="White"/>
                             <Setter Property="Foreground" Value="#D6D6D6"/>
                             <Setter Property="BorderThickness" Value="0"/>
                        </Style>
                     </Button.Style>
                 </Button>
            </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>


        <!-- Add Note Button -->
        <Border Width="50" Height="50" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="20"
        Background="#7321A6" CornerRadius="10">
            <Button Width="50" Height="50" Background="Transparent" BorderBrush="Transparent" Foreground="White" 
            FontSize="30" Margin="0 -3 10 10" Content="+" Click="AddNoteButton_Click">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontSize" Value="30"/>
                    </Style>
                </Button.Style>
            </Button>
        </Border>


    </Grid>
</Window>
