<Window x:Class="notetakingapp_imp.ProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Profile Page" Height="600" Width="900" Background="White"
        WindowState="Maximized" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <!-- Welcome Message -->
        <TextBlock x:Name="WelcomeMessage" FontSize="40" FontWeight="Bold" Foreground="#7321a6"
                   VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,150,0,0">
        </TextBlock>

        <TextBlock x:Name="ProfileInstructions" FontSize="25" Foreground="#666"
                   VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,200,0,0">
            Your profile is ready, and you can make changes as needed.
        </TextBlock>

        <!-- Profile View Section -->
        <StackPanel x:Name="ProfileViewSection" Visibility="Visible" HorizontalAlignment="Center"
                    VerticalAlignment="Top" Margin="0,280,0,0">
            <Border BorderBrush="#DBE2E9" BorderThickness="1" Height="217" Width="422" CornerRadius="7">
                <StackPanel Background="White" Margin="0,10,0,0" Width="400" Height="200">
                    <TextBlock Text="User Profile" FontSize="24" FontWeight="Bold" Foreground="Black" Margin="0 0 10 0" Height="41" />
                    <Border CornerRadius="3" BorderThickness="1" BorderBrush="#DBE2E9" Background="#F2F3F5">
                        <StackPanel>
                            <TextBlock x:Name="UserNameText" FontSize="15" Margin="10"/>
                            <TextBlock x:Name="UserEmailText" FontSize="15" Margin="10"/>
                            <Button Content="Edit Profile" Background="#7321a6" Foreground="White" Width="362" Height="31"
                                    Margin="10,25,10,10" BorderThickness="0" Click="EditProfile_Click"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Profile Edit Section -->
        <StackPanel x:Name="ProfileEditSection" Visibility="Collapsed" HorizontalAlignment="Center"
                    VerticalAlignment="Top" Margin="0,250,0,0">
            <TextBlock Text="Edit Profile" FontSize="24" FontWeight="Bold" Foreground="#7321a6" />
            <StackPanel Background="White" Margin="0,10,0,0" Width="400" Height="250" VerticalAlignment="Center">
                <TextBlock Text="Name" FontSize="15" Margin="10"/>
                <TextBox x:Name="NameTextBox" Width="350" Height="30" Margin="10,5" />

                <TextBlock Text="Email" FontSize="15" Margin="10"/>
                <TextBox x:Name="EmailTextBox" Width="350" Height="30" Margin="10,5" />

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button Content="Save Changes" Background="#7321a6" Foreground="White" Width="150" Height="35"
                            Margin="10,0" Click="SaveChanges_Click"/>
                    <Button Content="Cancel" Background="Red" Foreground="White" Width="150" Height="35"
                            Margin="10,0" Click="CancelEdit_Click"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
